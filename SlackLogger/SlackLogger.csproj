<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net451;netstandard1.3</TargetFrameworks>
    <Authors>Severin Sverdvik</Authors>
    <Description>A simple and configurable logger for ASP.NET Core projects that logs to Slack.
    SlackLogger will post formatted log messages at the desired level to a specified channel or person.
    Documentation can be found at https://github.com/severisv/slacklogger
    </Description>
    <PackageTags>logger logging logs</PackageTags>
    <ProjectUrl>https://github.com/severisv/slacklogger</ProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions">
      <Version>1.0.0</Version>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json">
      <Version>10.0.1</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>
</Project>